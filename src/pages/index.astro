---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import TranslatedText from "../components/TranslatedText.astro";
---

<Layout title="Tu Portafolio">
  <Header />

  <main class="pt-16">
    <!-- Hero Section -->
    <section
      id="home"
      class="min-h-screen flex items-center justify-center py-20"
    >
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-blue-400 text-lg mb-4">
          <TranslatedText key="hero.greeting" />
        </p>
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
          Tu Nombre
        </h1>
        <h2 class="text-3xl md:text-4xl text-gray-400 mb-8">
          <TranslatedText key="hero.title" />
        </h2>
        <p class="text-gray-300 text-lg max-w-2xl mx-auto">
          <TranslatedText key="hero.description" />
        </p>
      </div>
    </section>

    <!-- Aquí irían las demás secciones (About, Projects, Contact) -->
  </main>
</Layout>
