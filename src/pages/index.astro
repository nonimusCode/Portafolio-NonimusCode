---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import TranslatedText from "../components/TranslatedText.astro";
---

<Layout title="Tu Portafolio">
  <Header />

  <main class="pt-16">
    <!-- Hero Section -->
    <section
      id="home"
      class="min-h-screen flex items-center justify-center py-20"
    >
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-[#3b82f6] text-2xl mb-4">
          <TranslatedText key="hero.greeting" />
          <span></span>
        </p>
        <!-- Contenedor de imagen con efectos -->
        <div class="relative mx-auto mb-8 w-48 h-48">
          <!-- Fondo decorativo con gradiente y animaci贸n -->

          <!-- Marco exterior con borde -->
          <div class="absolute inset-0 rounded-full"></div>

          <!-- Contenedor de la imagen -->
          <div class="relative w-full h-full rounded-full overflow-hidden p-1">
            <img
              src="/pfoileJuan.jpg"
              alt="Foto de perfil"
              class="w-full h-full rounded-full object-cover"
            />
          </div>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Juan Pablo Cer贸n
        </h1>
        <h2 class="text-3xl md:text-5xl text-gray-400 mb-8">
          <TranslatedText key="hero.title" />
        </h2>
        <p class="text-gray-300 text-lg max-w-2xl mx-auto">
          <TranslatedText key="hero.description" />
        </p>
      </div>
    </section>

    <!-- Aqu铆 ir铆an las dem谩s secciones (About, Projects, Contact) -->
  </main>
</Layout>

<style>
  /* Opcional: A帽adir animaci贸n de rotaci贸n al gradiente */
  @keyframes gradient-rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .animate-gradient {
    animation: gradient-rotate 8s linear infinite;
  }
</style>
