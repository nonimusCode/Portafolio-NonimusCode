---
import LanguageSelector from "./LanguageSelector.astro";
import TranslatedText from "./TranslatedText.astro";

const navigation = [
  { href: "#home", key: "nav.home" },
  { href: "#about", key: "nav.about" },
  { href: "#projects", key: "nav.projects" },
  { href: "#contact", key: "nav.contact" },
];
---

<header class="fixed w-full top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div
          class="bg-[#0A192F]/40 backdrop-blur-md px-[2.5rem] py-4 rounded-xl border border-gray-800"
        >
          <div class="flex items-center space-x-8">
            {
              navigation.map(({ href, key }) => (
                <a
                  href={href}
                  class="text-gray-300 hover:text-[#5BE9FF] text-xl font-medium transition-colors"
                >
                  <TranslatedText key={key} />
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Theme Toggle & Language -->
      <div class="flex items-center gap-4">
        <LanguageSelector />

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden bg-[#0A192F]/40 backdrop-blur-md p-2 rounded-lg border border-gray-800"
        >
          <svg
            class="w-5 h-5 text-gray-300"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="fixed inset-0 bg-[#0A192F]/95 backdrop-blur-lg md:hidden hidden"
    >
      <div class="min-h-screen flex flex-col">
        <!-- Mobile Menu Header -->
        <div class="flex items-center justify-between p-4">
          <a href="#home" class="flex-shrink-0">
            <svg
              class="w-8 h-8 text-[#5BE9FF]"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
              ></path>
            </svg>
          </a>
          <button
            id="mobile-menu-close"
            class="p-2 rounded-lg text-gray-300 hover:text-white"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Menu Links -->
        <div class="flex flex-col items-center justify-center flex-1 space-y-8">
          {
            navigation.map(({ href, key }) => (
              <a
                href={href}
                class="text-2xl text-gray-300 hover:text-[#5BE9FF] font-medium transition-colors"
              >
                <TranslatedText key={key} />
              </a>
            ))
          }
        </div>

        <!-- Mobile Menu Footer -->
        <div class="p-4 flex justify-center space-x-4">
          <LanguageSelector />
          <button
            class="bg-[#0A192F]/40 backdrop-blur-md p-2 rounded-lg border border-gray-800"
          >
            <svg
              class="w-5 h-5 text-gray-300"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
              ></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenuClose = document.getElementById("mobile-menu-close");
  const mobileMenu = document.getElementById("mobile-menu");

  // Función para manejar el menú móvil
  function toggleMobileMenu(show: boolean) {
    if (show) {
      mobileMenu?.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    } else {
      mobileMenu?.classList.add("hidden");
      document.body.style.overflow = "";
    }
  }

  mobileMenuButton?.addEventListener("click", () => toggleMobileMenu(true));
  mobileMenuClose?.addEventListener("click", () => toggleMobileMenu(false));

  // Cerrar menú al hacer clic en un enlace
  document.querySelectorAll("#mobile-menu a").forEach((link) => {
    link.addEventListener("click", () => toggleMobileMenu(false));
  });

  // Manejar tecla Escape
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") toggleMobileMenu(false);
  });
</script>

<style>
  /* Animaciones suaves */
  #mobile-menu {
    transition: opacity 0.3s ease-in-out;
  }

  #mobile-menu.hidden {
    opacity: 0;
    pointer-events: none;
  }

  #mobile-menu:not(.hidden) {
    opacity: 1;
    pointer-events: auto;
  }
</style>
